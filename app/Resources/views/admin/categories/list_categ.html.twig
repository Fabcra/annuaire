{% extends "admin/admin.html.twig" %}
{% block admin %}
    <div class="cards-row marg bottom margleft">
         <a href="{{path('new_categorie')}}" class="btn btn-xs btn-primary">Ajouter</a>
         <hr/>
        {% for c in categorie %}
            <div class="card-row">
                
                <div class="card-row-inner">
                   
                                

                    <div class="card-row-image" data-background-image=../../../../web/uploads/images/{{(c.image)}}>
                        <div class="card-row-label">


                            <a href="{{path('update_categorie', {'id':c.id})}}">{{ c.nomCategorie }}</a>


                        </div><!-- /.card-row-label -->


                    </div><!-- /.card-row-image -->

                    <div class="card-row-body">

                        <h2 class="card-row-title"><a href="{{path('liste_prestataires_categorie', {'slug':c.nomCategorie})}}">{{c.nomCategorie}}</a></h2>
                        <div class="card-row-content">

                            <p>{{c.description}}</p>


                        </div>
                    </div><!-- /.card-row-body -->

                      
                   </div><!-- /.card-row-inner -->
               </div><!-- /.card-row -->

                {% endfor %}

            </div><!-- /.cards-row -->
            
            
        {% endblock %}