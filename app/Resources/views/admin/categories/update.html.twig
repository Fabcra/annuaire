{% extends "admin/admin.html.twig" %}

{% block admin %}

    <div style="background-color: #fff">
        <div class="main-inner">
            <div class="container">
                <div class="row">
                    <div class="page-title">
                        <h1>Modification catégorie</h1>
                    </div><!-- /.page-title -->
                    <div class="col-sm-4 col-lg-3">
                        <div>
                            <div class="widget">
                                <div class="user-photo">
                                    <img src="../../../../../web/uploads/images/{{categorie.image}}" alt="User Photo">
                                    <a href="{{path("new_imgcateg",{'id':categorie.id})}}"><span class="user-photo-action">Modifier l'image</span></a>
                                </div><!-- /.user-photo -->
                            </div><!-- /.widget -->
                        </div><!-- /.sidebar -->
                    </div><!-- /.col-* -->
                    <div class="col-sm-8 col-lg-9">
                        <div class="content">

                            <div class="background-white p20 mb30">

                                <div class="row">
                                    {{form_start(categForm)}}
                                    <div class="form-group col-sm-6">
                                        {{form_row(categForm.nomCategorie, {'label' : 'Nom Catégorie'})}}
                                        {{form_row(categForm.description, {'label' : 'Description'})}}
                                        {{form_row(categForm.valide, {'label' : 'Valide'})}}
                                       
                                        {{form_row(categForm.enAvant, {'label' : 'Service du mois'})}}

                                        <button type="submit" class="btn btn-primary btn-xs pull-right">Enregistrer</button>
                                        <a href="{{path('delete_categorie',{'id':categorie.id})}}" class="btn btn-xs btn-danger">Supprimer</a>

                                    </div><!-- /.form-group -->


                                </div>
                                {{ form_row(categForm._token)}}
                                {{form_end(categForm,{'render_rest':false})}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}
