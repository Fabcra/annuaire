{% block content %}
    <div class="page-header">
        <h1>Most Recent Places &amp; Events</h1>
        <p>List of most recent interesting places and events in our directory submitted <br>by our users. Check whats going on in the city now.</p>
    </div><!-- /.page-header -->

    <div class="cards-simple-wrapper largeur centrage">



            {% for a in utilisateurs|slice(0,8) %}

                <div class="col-sm-6 col-md-3">
                    <div class="card-simple" data-background-image={{a.image}}>
                        <div class="card-simple-background">
                            <div class="card-simple-content">
                                <h2><a href="#">{{a.nomUtilisateur}}</a></h2>
                                <div class="card-simple-rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div><!-- /.card-rating -->

                                <div class="card-simple-actions">
                                    <a href="#" class="fa fa-bookmark-o"></a>
                                    <a href="#" class="fa fa-search"></a>
                                    <a href="#" class="fa fa-heart-o"></a>
                                </div><!-- /.card-simple-actions -->
                            </div><!-- /.card-simple-content -->

                            <div class="card-simple-label">{% for b in a.categorie %}{{ b.Nomcategorie}}{% endfor %}</div>

                        </div><!-- /.card-simple-background -->
                    </div><!-- /.card-simple -->
                </div><!-- /.col-* -->
            {% endfor %}
    </div><!-- /.cards-simple-wrapper -->
{% endblock %}