{% extends "layout/layout.html.twig" %}

{% block stylesheets %}

    {{ parent() }}

    <link rel="stylesheet" href="{{asset('//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.css')}}">

{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script src="{{asset('//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.min.js')}}"></script>

    <script>
        jQuery(document).ready(function () {
            $('.js-datepicker').datepicker({
                format: 'yyyy-mm-dd'
            });
        });
    </script>

{% endblock %}

{% block content %}
    <div style="background-color: #fff">
        <div class="main-inner">
            <div class="container">
                <div class="row">
                    <div class="col-sm-8 col-lg-9">
                        <div class="content">
                            <div class="page-title">
                                <h1>Nouvelle promotion</h1>
                            </div><!-- /.page-title -->

                            <div class="background-white p20 mb30">
                                {{form_start(promoForm)}}
                                <div class="row">
                                    <div class="form-group col-sm-6">
                                        {{form_row(promoForm.nom)}}
                                    </div>
                                    <div class="form-group col-sm-6">
                                        {{form_row(promoForm.description)}}
                                    </div>
                                    <div class="form-group col-sm-6">
                                        {{form_row(promoForm.categorie)}}
                                    </div>
                                    <div class="form-group col-sm-6">
                                        {{form_row(promoForm.debut)}}
                                    </div>
                                    <div class="form-group col-sm-6">
                                        {{form_row(promoForm.fin)}}
                                    </div>
                                    <div class="form-group col-sm-6">
                                        {{form_row(promoForm.affichageDe)}}
                                    </div>
                                    <div class="form-group col-sm-6">
                                        {{form_row(promoForm.affichageJusque)}}
                                    </div>
                                    <div class="form-group col-sm-6">
                                        {{form_row(promoForm.documentPDF)}}
                                    </div>
                                    {{ form_row(promoForm._token)}}

                                    <button type="submit" class="btn btn-primary pull-right">Enregistrer</button>

                                    {{form_end(promoForm, {'render_rest':false})}}

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
