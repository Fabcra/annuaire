{% extends "layout/layout.html.twig" %}
{% block content %}
    <div class="cards-row">
        {% for a in prestataires %}
            <div class="card-row">
                <div class="card-row-inner">

                    <div class="card-row-image" data-background-image={% for c in a.images%}{{asset(c.image)}}{%endfor%}>
                        <div class="card-row-label">


                            <a href="{{path('show_prestataire',{'slug':a.username})}}">{{ a.username }}</a>


                        </div><!-- /.card-row-label -->


                    </div><!-- /.card-row-image -->

                    <div class="card-row-body">

                        <h2 class="card-row-title"><a href="listing-detail.html">{{a.username}}</a></h2>
                        <div class="card-row-content">
{#                            {% for c in a.categories %}#}
                                <p>{{a.adresse}} {{a.adressenum}}</p>
                                <p>{{a.codePostal}} {{a.Localite}} {{a.Commune}}</p>
{#                            {%endfor%}#}

                        </div>
                    </div><!-- /.card-row-body -->

                    <div class="card-row-properties">
                        <dl>





                            <dd>Cat√©gorie(s)</dd> {% for c in a.categories %}<dt>{{c.nomCategorie}} </dt>{% endfor %}



                            <dd>Location</dd><dt>{{ a.localite }}</dt>


                            <dd>Rating</dd>
                            <dt>
                            <div class="card-row-rating">
                                <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                            </div><!-- /.card-row-rating -->
                            </dt>
                        </dl>
                    </div><!-- /.card-row-properties -->
                </div><!-- /.card-row-inner -->
            </div><!-- /.card-row -->

        {% endfor %}

    </div><!-- /.cards-row -->
{% endblock %}