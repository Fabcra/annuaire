{% extends "layout/layout.html.twig" %}

{% block content %}
    
    {% include 'public/slider.html.twig' %}
    <div class="header header-transparent" style="background-color: #8C8989">
        <div class="page-header">
            <h1>Les meilleurs centres de bien-être</h1>
            <p>Retrouver ici la liste des centres de bien-être sélectionnés <br>par les clients et classés par localité.</p>
        </div><!-- /.page-header -->

        <div class="largeur centrage">
            

            {% for u in utilisateur|slice(0,8) %}
                {% if u.banni==false %}
                <div class="col-sm-6 col-md-3">
                    <div class="card-simple" data-background-image="../../web/uploads/images/{{u.logo}}" >
                        <div class="card-simple-background">
                            <div class="card-simple-content">
                                <h2><a href="{{path('show_prestataire', {slug:u.username})}}"> {{u.username}}</a></h2>
                                
                                <div class="card-simple-actions">
                                    <a href="{{path('show_prestataire', {slug:u.username})}}" class="fa fa-search"></a>
                                </div><!-- /.card-simple-actions -->
                            </div><!-- /.card-simple-content -->
                            <div class="card-simple-label">{{ u.localite }}</div>

                        </div><!-- /.card-simple-background -->
                    </div><!-- /.card-simple -->
                </div><!-- /.col-* -->
                {% endif %}
            {% endfor %}
        </div><!-- /.cards-simple-wrapper -->
    </div>
{% endblock %}