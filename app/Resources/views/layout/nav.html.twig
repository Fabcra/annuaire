<header class="header header-transparent" style="background-image: url({{asset('assets/img/tmp/slider-large-3.jpg')}})">
    <div class="header-wrapper">
        <div class="container">
            <div class="header-inner">
                <div class="header-logo">
                    <a href={{path('accueil')}}>
                        <img src={{asset("assets/img/logo.png")}} alt="Logo">
                        <span>Bien-être</span>
                    </a>
                </div><!-- /.header-logo -->

                <div class="header-content">

                    <div class="header-top">


                        <form method="post" action="{{ path('login') }}">
                            <ul class="fa header-nav-primary nav nav-pills collapse navbar-collapse marg">
                                {% if app.user != null %}
                                    <li>{{app.user.username}}<i class="fa fa-chevron-down"></i>
                                        <ul class="sub-menu">


                                            {% if app.user.typeuser == "internaute" %}

                                                <li><a href="{{ path('internaute_update', {'id': app.user.id}) }}">Update</a></li>
                                                {% endif %}

                                            {% if app.user.typeuser == "prestataire" %}
                                                <li><a href="{{ path('prestataire_update', {'id': app.user.id}) }}">Update</a></li>
                                                <li><a href="{{ path('galerie_ajout', {'id': app.user.id}) }}">Galerie</a></li>
                                                {% endif %}

                                            <li><a href="{{ path('logout')}}">logout</a></li>
                                        </ul><li>
                                    {% endif %}

                                    {% if app.user == null %}
                                    <li><label for="login-form-email">Login</label></li>
                                    <li><input type="" name="_username" id="login-form-email" class="log"></li>

                                    <li><label for="login-form-password">Password</label></li>
                                    <li><input type="password" name="_password" id="login-form-password" class="log"></li>

                                    <li><button type="submit">Login</button></li>
                                    {% endif %}
                            </ul>

                        </form>  
                        {% if app.user == null %}
                            <div style="margin-right: 30px" class="header-nav-primary nav marg"><a href="{{ path('new_record', {typeuser:'prestataire'})}}">Prestataire ? Enregistrez-vous ici</a></div>
                        {% endif %}
                    </div><!-- /.header-top -->

                    <div class="header-bottom">


                        <ul class="header-nav-primary nav nav-pills collapse navbar-collapse">

                            <li class="active">
                                <a href="{{path('list_categ')}}">Categories <i class="fa"></i></a>
                            </li>

                            <li >
                                <a href="#">Stages<i class="fa fa-chevron-down"></i></a>

                                <ul class="sub-menu">
                                    {% if app.user != null %} 
                                        {% if app.user.typeuser =="prestataire" %}
                                            <li><a href="{{path('new_stage')}}">Insérer</a></li>
                                            {% endif %}
                                        {% endif %}

                                    <li><a href="{{path('list_stages')}}">Liste</a></li>


                                    {% if app.user != null %}
                                        {% if app.user.typeuser == 'prestataire' %} 
                                            <li><a href="{{path('list_stages_presta', {'slug':app.user.username})}}">Modification</a></li>
                                            {% endif %}
                                        {% endif %}
                                </ul>
                            </li>


                            <li >
                                <a href="#">Promotions <i class="fa fa-chevron-down"></i></a>
                                <ul class="sub-menu">
                                    <li><a href="{{path('liste_promotions')}}">Liste</a></li>
                                    {% if app.user != null %}
                                        {% if app.user.typeuser == 'prestataire' %}
                                            <li><a href="{{path('new_promo')}}">Insérer</a></li>
                                            <li><a href="{{path('list_promo_presta', {'slug':app.user.username})}}">Modification</a></li>
                                        {% endif %}
                                    {% endif %}

                                </ul>


                            </li>

                            <li >
                                
                                {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{path('admin')}}">Admin</a>
                                {% endif %}
                                

                            </li>





                        </ul>

                        <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".header-nav-primary">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div><!-- /.header-bottom -->
                </div><!-- /.header-content -->
            </div><!-- /.header-inner -->
        </div><!-- /.container -->
    </div><!-- /.header-wrapper -->
</header>